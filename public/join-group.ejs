        <hr>

    </div>

    <div class="simple-center">
        <h1>Join a Group</h1>


        <form action="/join-group" method="post">
            <input type="text" id="group-name" name="group-name" placeholder="group name">
            <input type="text" id="group-pw" name="group-pw" placeholder="group password">
            <input type="submit" id="join" name="join" value="Join Group">
        </form>
        
        <br><br>
    </div>

